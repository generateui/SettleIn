<UserControl x:Class="SettleIn.UI.Elements.SceneMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:SettleIn.Engine.ViewPort"
    Height="800" Width="800">
    <src:BoardViewerViewPort3D x:Name="mainViewport" ClipToBounds="true" Visibility="Visible" Height="230" Width="250" Margin="0,10,0,10">
        <Viewport3D.Camera>
            <PerspectiveCamera
	                      FarPlaneDistance="150"
	                      LookDirection="1,-90,0"
	                      UpDirection="0,1,0"
	                      NearPlaneDistance="10"
	                      Position="0,70,0"
	                      FieldOfView="70"
                          x:Name="cam"/>
        </Viewport3D.Camera>
    </src:BoardViewerViewPort3D>
</UserControl>
